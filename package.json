{
  "name": "roam-tools",
  "private": true,
  "workspaces": ["packages/core", "packages/mcp", "packages/cli"],
  "scripts": {
    "build": "tsc --build tsconfig.build.json && node scripts/copy-cli-help.mjs",
    "clean": "tsc --build tsconfig.build.json --clean",
    "typecheck": "tsc --build tsconfig.build.json --force",
    "mcp": "tsx --conditions development packages/mcp/src/index.ts",
    "cli": "tsx --conditions development packages/cli/src/index.ts",
    "version:bump": "node scripts/bump-version.mjs",
    "version:check": "node scripts/check-versions.mjs",
    "publish:all": "npm run version:check && npm run build && npm publish -w packages/core && npm publish -w packages/mcp && npm publish -w packages/cli"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": { "node": ">=18" }
}

{
  "name": "@roam-research/roam-tools-core",
  "version": "0.4.0",
  "description": "Core library for Roam Research tools",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Roam-Research/roam-tools.git",
    "directory": "packages/core"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "development": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./connect": {
      "types": "./dist/connect.d.ts",
      "development": "./src/connect.ts",
      "import": "./dist/connect.js"
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepublishOnly": "npm run --prefix ../.. build"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "open": "^11.0.0",
    "zod": "^3.25.76"
  }
}
